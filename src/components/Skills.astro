        margin-bottom: 0.75rem;
        color: var(--text-color);
    }

    .skill-description {
        font-size: 1rem;
        line-height: 1.6;
        color: var(--text-color);
        opacity: 0.8;
        margin: 0;
    }

    @media (max-width: 720px) {
        .skills-section {
            padding: 3rem 1rem;
        }

        .section-title {
            font-size: 2rem;
        }

        .skills-grid {
            grid-template-columns: 1fr;
            gap: 1.5rem;
        }

        .skill-card {
            padding: 1.5rem;
        }
    }
