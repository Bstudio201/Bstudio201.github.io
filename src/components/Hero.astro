---
const {
    name = "Blog201",
    title = "Developer",
    description = "안녕하세요.<br/> 개발과 기술에 대한 이야기를 나누는 공간입니다.",
} = Astro.props;

// 타이핑 애니메이션에 사용할 텍스트 배열
const typingTexts = [
    "Developer & Tech Enthusiast",
    "Web Developer",
    "Problem Solver",
    "Lifelong Learner",
];
---

<section class="hero-section">
    <div class="hero-container">
        <div class="profile-image-wrapper">
            <img src="/duck-profile.jpg" alt="Profile" class="profile-image" />
        </div>
        <h1 class="hero-name">{name}</h1>
        <p class="hero-title">
            <span id="typing-text"></span>
            <span class="cursor">|</span>
        </p>
        <p class="hero-description" set:html={description} />

        <div class="social-links">
            <a
                href="https://github.com/Bstudio201"
                target="_blank"
                rel="noopener noreferrer"
                class="social-link"
                aria-label="GitHub"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                >
                    <path
                        d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                    ></path>
                </svg>
            </a>
            <a
                href="mailto:contact@blog201.com"
                class="social-link"
                aria-label="Email"
            >
                <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="24"
                    height="24"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                >
                    <path
                        d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"
                    ></path>
                    <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
            </a>
        </div>

        <a href="/#about" class="cta-button">Learn More</a>
    </div>
</section>

<script define:vars={{ typingTexts }}>
    const typingElement = document.getElementById("typing-text");
    let textIndex = 0;
    let charIndex = 0;
    let isDeleting = false;
    let typingSpeed = 100;

    function type() {
        const currentText = typingTexts[textIndex];

        if (isDeleting) {
            typingElement.textContent = currentText.substring(0, charIndex - 1);
            charIndex--;
            typingSpeed = 50;
        } else {
            typingElement.textContent = currentText.substring(0, charIndex + 1);
            charIndex++;
            typingSpeed = 100;
        }

        if (!isDeleting && charIndex === currentText.length) {
            // 완성된 후 잠시 대기
            typingSpeed = 2000;
            isDeleting = true;
        } else if (isDeleting && charIndex === 0) {
            isDeleting = false;
            textIndex = (textIndex + 1) % typingTexts.length;
            typingSpeed = 500;
        }

        setTimeout(type, typingSpeed);
    }

    // 페이지 로드 후 타이핑 시작
    document.addEventListener("DOMContentLoaded", () => {
        setTimeout(type, 500);
    });
</script>

<style>
    .hero-section {
        padding: 4rem 1rem;
        text-align: center;
        max-width: 800px;
        margin: 0 auto;
    }

    .hero-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 1rem;
    }

    .profile-image-wrapper {
        width: 200px;
        height: 200px;
        border-radius: 50%;
        overflow: hidden;
        border: 4px solid var(--accent-color, #3b82f6);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        margin-bottom: 1rem;
    }

    .profile-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .hero-name {
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0;
        color: var(--text-color);
    }

    .hero-title {
        font-size: 1.25rem;
        color: var(--accent-color, #3b82f6);
        margin: 0;
        font-weight: 500;
        min-height: 1.5em;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 2px;
    }

    #typing-text {
        display: inline-block;
    }

    .cursor {
        display: inline-block;
        animation: blink 1s infinite;
        font-weight: 400;
    }

    @keyframes blink {
        0%,
        50% {
            opacity: 1;
        }
        51%,
        100% {
            opacity: 0;
        }
    }

    .hero-description {
        font-size: 1.1rem;
        color: var(--text-color);
        opacity: 0.8;
        max-width: 600px;
        line-height: 1.6;
        margin: 0.5rem 0 1.5rem;
    }

    .social-links {
        display: flex;
        gap: 1rem;
        margin: 1rem 0;
    }

    .social-link {
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background-color: var(--bg-color);
        border: 2px solid var(--border-color);
        display: flex;
        align-items: center;
        justify-content: center;
        color: var(--text-color);
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .social-link:hover {
        background-color: var(--accent-color, #3b82f6);
        border-color: var(--accent-color, #3b82f6);
        color: white;
        transform: translateY(-3px);
    }

    .cta-button {
        display: inline-block;
        padding: 0.75rem 2rem;
        background-color: var(--accent-color, #3b82f6);
        color: white;
        text-decoration: none;
        border-radius: 8px;
        font-weight: 600;
        transition: all 0.3s ease;
        margin-top: 1rem;
    }

    .cta-button:hover {
        background-color: var(--accent-color, #2563eb);
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(59, 130, 246, 0.3);
    }

    @media (max-width: 720px) {
        .hero-section {
            padding: 2rem 1rem;
        }

        .profile-image-wrapper {
            width: 150px;
            height: 150px;
        }

        .hero-name {
            font-size: 2rem;
        }

        .hero-title {
            font-size: 1.1rem;
        }

        .hero-description {
            font-size: 1rem;
        }
    }
</style>
